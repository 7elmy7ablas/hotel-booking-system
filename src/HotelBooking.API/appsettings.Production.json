{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_PRODUCTION_SERVER;Database=HotelBookingDb;User Id=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;MultipleActiveResultSets=true;TrustServerCertificate=false;Encrypt=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Error"
      }
    }
  },
  "Jwt": {
    "Secret": "REPLACE_WITH_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS",
    "Issuer": "HotelBookingAPI",
    "Audience": "HotelBookingClient",
    "ExpirationInHours": 24
  },
  "AllowedOrigins": [
    "https://your-production-domain.com"
  ],
  "Email": {
    "SmtpServer": "smtp.your-email-provider.com",
    "SmtpPort": 587,
    "SmtpUsername": "YOUR_EMAIL_USERNAME",
    "SmtpPassword": "YOUR_EMAIL_PASSWORD",
    "FromEmail": "noreply@your-domain.com",
    "FromName": "Hotel Booking System",
    "EnableSsl": true
  }
}
